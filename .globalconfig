# General rule to activate all analysis
dotnet_analyzer_diagnostic.severity = error

# I don't care about marking assemblies CLSCompliant
dotnet_diagnostic.CA1014.severity = none

# Allow properties to return arrays
dotnet_diagnostic.CA1819.severity = none

# Allow multiple iterations of enumerables: very often we have very little enumerables, where it is not a problem to iterate multiple times
dotnet_diagnostic.CA1851.severity = none

# Allow catching all exceptions: it is not rare that I don't want to take any risk of unexpected exception
dotnet_diagnostic.CA1031.severity = none

# Allow mutable properties
dotnet_diagnostic.CA2227.severity = none

# Allow simple uses of Logger
dotnet_diagnostic.CA1848.severity = none

# I want to use var
dotnet_diagnostic.IDE0008.severity = none

# I don't want to always use braces (eg if or foreach blocks)
dotnet_diagnostic.IDE0011.severity = none

# I want to use file-scoped namespaces
dotnet_diagnostic.IDE0160.severity = none

# I like inlined methods
dotnet_diagnostic.IDE0022.severity = none

# Never ignoring expression value is not efficient from my point of view
dotnet_diagnostic.IDE0058.severity = none

# ConfigureAwait is useless in Asp NET Core
dotnet_diagnostic.CA2007.severity = none

# I use public nested classes
dotnet_diagnostic.CA1034.severity = none

# I rely on nullable and don't want to check params
dotnet_diagnostic.CA1062.severity = none

# I want to use underscores in some names
dotnet_diagnostic.CA1707.severity = none

# I allow litteral strings
dotnet_diagnostic.CA1303.severity = none

# I allow type names as identifiers, because I have existing code with that
dotnet_diagnostic.CA1720.severity = none

# I allow exceptions without standard constructors
dotnet_diagnostic.CA1032.severity = none

# I can't allow Remove unnecessary using directives with this way
dotnet_diagnostic.IDE0005.severity = none

# Allow Remove unnecessary using directives with this way
dotnet_diagnostic.CS8019.severity = error
