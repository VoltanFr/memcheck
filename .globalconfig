# General rule to activate all analysis
dotnet_analyzer_diagnostic.severity = error

# I don't care about marking assemblies CLSCompliant
dotnet_diagnostic.CA1014.severity = none

# I want to use var
dotnet_diagnostic.IDE0008.severity = none

# I don't want to always use braces (eg if or foreach blocks)
dotnet_diagnostic.IDE0011.severity = none

# I want to use file-scoped namespaces
dotnet_diagnostic.IDE0160.severity = none

# I like inlined methods
dotnet_diagnostic.IDE0022.severity = none

# Never ignoring expression value is not efficient from my point of view
dotnet_diagnostic.IDE0058.severity = none

# ConfigureAwait is useless in Asp NET Core
dotnet_diagnostic.CA2007.severity = none

# I use public nested classes
dotnet_diagnostic.CA1034.severity = none

# I rely on nullable and don't want to check params
dotnet_diagnostic.CA1062.severity = none
